<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crisis.pruebamapaubicacion.Menu">

    <GridLayout
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:rowCount="3"
        android:columnCount="2"
        >
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/ticket"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/cash"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/bus"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/imageButton3" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/miurban"

            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/imageButton2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/gift"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/imageButton5" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/NaranjaClaro"
            android:src="@drawable/settings"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/imageButton4" />

    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/AzulClaro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:src="@drawable/botoncircular"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/imageUsuario"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre Usuario"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:textColorHint="@color/GrisClaro"
            android:id="@+id/lblNombre"/>
    </FrameLayout>


</RelativeLayout>
